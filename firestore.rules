
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated admins to manage configuration
    match /configurations/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated admins to manage kb_meta
    match /kb_meta/{docId} {
        allow read, write, delete: if request.auth != null;
    }

    // Allow authenticated admins to read from kb_chunks for vector search
    match /kb_chunks/{chunkId} {
      allow read: if request.auth != null;
    }
  }
}
