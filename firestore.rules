rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for all documents, but only allow authenticated
    // users (i.e., the admin) to write data. This is necessary for the
    // public-facing pages to load configuration and assets.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
