
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the authenticated admin.
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'admin-uid';
    }

    // Site configuration data:
    // - Anyone can read it (for avatars, welcome messages, etc.).
    // - Only the admin can write to it.
    match /configurations/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Knowledge base metadata:
    // - Only the admin can read, create, update, or delete these documents.
    match /kb_{level}_meta_v1/{docId} {
       allow read, write: if isAdmin();
    }

    // Deny all direct client access to the raw data chunks and diagnostic tests.
    // These should only be accessed by server-side flows.
    match /kb_chunks/{docId} {
      allow read, write: if false;
    }
    match /__diagnostic_tests/{docId} {
        allow read, write: if false;
    }
  }
}
