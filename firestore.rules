rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to everyone, but write access only to authenticated admin users.
    // This allows the app to fetch its configuration publicly, but secures all write operations.
    match /{document=**} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2024, 8, 22);
    }
  }
}
