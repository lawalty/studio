
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to configuration files for site display
    match /configurations/site_display_assets {
      allow read: if true;
      allow write: if request.auth.uid == 'admin-uid';
    }

    // Allow admin to read and write to API key config. No public access.
    match /configurations/api_keys_config {
        allow read, write: if request.auth.uid == 'admin-uid';
    }

    // Allow admin to manage knowledge base metadata
    match /kb_{level}_meta_v1/{docId} {
      allow read, write, delete: if request.auth.uid == 'admin-uid';
    }

    // Disallow direct client access to chunks to prevent data leakage
    match /kb_chunks/{chunkId} {
      allow read, write, delete: if false;
    }

    // Allow admin to run diagnostic tests
    match /__diagnostic_tests/{testId} {
        allow read, write, delete: if request.auth.uid == 'admin-uid';
    }
  }
}
