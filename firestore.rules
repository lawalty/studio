
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read/write access to all documents for the next 30 days
    // This is for development and demonstration purposes ONLY.
    // WARNING: This makes your database publicly accessible.
    // You MUST secure this before launching a production application.
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2024, 8, 20);
    }
  }
}

    