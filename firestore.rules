rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Configurations collection:
    // - Public can read (for site display assets like images/messages)
    // - Only authenticated admins can write.
    match /configurations/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Knowledge Base metadata collections (High, Medium, Low, etc.)
    // Only authenticated admins can read, write, or delete.
    match /kb_high_meta_v1/{docId} {
      allow read, write, delete: if request.auth != null;
    }
    
    match /kb_medium_meta_v1/{docId} {
      allow read, write, delete: if request.auth != null;
    }
    
    match /kb_low_meta_v1/{docId} {
      allow read, write, delete: if request.auth != null;
    }

    match /kb_spanish_pdfs_meta_v1/{docId} {
      allow read, write, delete: if request.auth != null;
    }

    match /kb_chat_history_meta_v1/{docId} {
      allow read, write, delete: if request.auth != null;
    }

    match /kb_archive_meta_v1/{docId} {
      allow read, write, delete: if request.auth != null;
    }

    // The 'kb_chunks' collection contains all text chunks and their embeddings.
    // - Only the server (authenticated admin) should be able to read or write these.
    match /kb_chunks/{chunkId} {
      allow read, write, delete: if request.auth != null;
    }

    // Deny all access to any other collections by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}