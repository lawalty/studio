rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read access on all files by default.
    // This is useful for assets like avatars, site images, and PDF downloads
    // which need to be accessible from the client-side.
    // Write access is restricted by the more specific rules below.
    match /{allPaths=**} {
      allow read;
    }

    // Secure the knowledge base folders.
    // Only authenticated users (admins) can upload/modify knowledge base files.
    match /knowledge_base_files/{level}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Secure the site assets folder.
    // Only authenticated users (admins) can upload/modify site assets.
    match /site_assets/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow ANY user (even unauthenticated) to write to the chat history path.
    // This is necessary because the chat transcript is uploaded from the client
    // at the end of a session, where the user may not be an authenticated admin.
    match /chat_history_files/{allPaths=**} {
      allow write;
    }
  }
}
