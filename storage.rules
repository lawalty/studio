
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read access to all files. This is necessary for PDF
      // download links in the chat to work for any user.
      allow read;

      // Only allow authenticated requests to write files. This covers
      // server-side operations (like chat archiving and KB uploads)
      // and can be adjusted for client-side uploads if needed.
      allow write: if request.auth != null;
    }
  }
}

    