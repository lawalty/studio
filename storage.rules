rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files so that images (avatars, etc.)
    // can be displayed on the public-facing pages. Only allow authenticated
    // users (i.e., the admin) to upload files.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
