rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access to files
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow read access to anyone for site assets (avatars, background images).
    // This is required for them to be publicly visible on the site.
    match /site_assets/{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to upload knowledge base files.
    match /knowledge_base_files/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow anyone to read knowledge base files if they have the URL.
    // This is required for the RAG pipeline to access the content.
    match /knowledge_base_files/{allPaths=**} {
      allow read: if true;
    }
  }
}
