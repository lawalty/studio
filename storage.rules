
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read and write access to all files in Cloud Storage
    // for any authenticated user. This is necessary for uploading new
    // knowledge base documents and providing download links.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
