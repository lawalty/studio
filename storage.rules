
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the site_assets folder
    match /site_assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.uid == 'admin-uid';
    }

    // Allow authenticated admin to read, write, and delete knowledge base files
    match /knowledge_base_files/{allPaths=**} {
      allow read, write, delete: if request.auth.uid == 'admin-uid';
    }
  }
}
