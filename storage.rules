
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files. This is generally safe as files
    // are accessed via unguessable URLs.
    match /{allPaths=**} {
      allow read;
    }

    // Allow any user to write to the knowledge_base_files directory.
    // The admin panel itself is secured by phone authentication, making this
    // a reasonable rule to ensure uploads are not blocked.
    match /knowledge_base_files/{allPaths=**} {
      allow write: if true;
    }

    // Allow authenticated users to write to the site_assets directory.
    // This is used for avatars and splash images.
    match /site_assets/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
