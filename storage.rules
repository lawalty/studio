rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload files to the knowledge base directory.
    // This rule is essential for the Knowledge Base admin page to function.
    // The {userId} wildcard is a security best practice, though for an admin
    // panel, simply checking for an authenticated user is the key part.
    match /knowledge_base_files/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

  }
}
