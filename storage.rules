rules_version = '2';

// By default, deny all reads and writes
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow server-side functions (like those in your app's backend)
    // to read and write to any location in the bucket.
    // This is secure because these actions are governed by your server's
    // own logic and permissions (IAM roles).
    match /{allPaths=**} {
      allow read, write;
    }
  }
}
