rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read and write to the knowledge base.
    match /knowledge_base_files/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read access to site assets for everyone, but only allow
    // authenticated users (admins) to write them.
    match /site_assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
