rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to write to the public_test_uploads directory for debugging purposes.
    match /public_test_uploads/{allPaths=**} {
      allow write: if true;
    }

    // Allow authenticated users to read and write their own files.
    // The {userId} wildcard ensures that users can only access their own folder.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read access to site assets (like avatars) for everyone.
    match /site_assets/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to read and write to the knowledge base.
    match /knowledge_base_files/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
