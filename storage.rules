
rules_version = '2';

// By default, deny all reads and writes.
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow writes only to the designated knowledge_base_files directory
    // for authenticated users. This is where all user-uploaded content
    // for the RAG system will be stored.
    match /knowledge_base_files/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow public read access to site assets like logos and avatars.
    // This allows the application front-end to display these images
    // without requiring user authentication.
    match /site_assets/{allPaths=**} {
      allow read: if true;
    }
  }
}
